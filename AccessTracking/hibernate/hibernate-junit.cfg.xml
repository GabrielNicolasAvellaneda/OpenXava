<!DOCTYPE hibernate-configuration PUBLIC 	"-//Hibernate/Hibernate Configuration DTD//EN"	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">	
<hibernate-configuration>	<session-factory>		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>		<property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost:1666</property>		<property name="hibernate.connection.username">sa</property>			</session-factory></hibernate-configuration>