<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd"><!-- OpenXava core controllers -->

<controllers>
	<env-var name="XAVA_SEARCH_ACTION" value="CRUD.searchByViewKey"/>	<env-var name="XAVA_LIST_ACTION" value="List.viewDetail"/>		<object name="xava_view" class="org.openxava.view.View"/>		<object name="xava_referenceSubview" class="org.openxava.view.View"/>	
	<object name="xava_tab" class="org.openxava.tab.Tab"/>		
	<object name="xava_mainTab" class="org.openxava.tab.Tab"/>			<object name="xava_row" class="java.lang.Integer" value="0"/>
	<object name="xava_language" class="org.openxava.session.Language"/>		<object name="xava_newImageProperty" class="java.lang.String"/>	<object name="xava_currentReferenceLabel" class="java.lang.String"/>	<object name="xava_activeSection" class="java.lang.Integer" value="0"/>	<object name="xava_previousControllers" class="java.util.Stack"/>
	<object name="xava_previousViews" class="java.util.Stack"/>		
			<controller name="Typical">		<extends controller="Print"/>				<extends controller="CRUD"/>	</controller>				<controller name="Void"/>	
		<controller name="CRUD">							<action name="new" 			class="org.openxava.actions.NewAction"			image="images/new.gif"			keystroke="F2">			<use-object name="xava_view"/>					</action>									<action name="save" mode="detail"			class="org.openxava.actions.SaveAction"			image="images/save.gif"			keystroke="F3">						<use-object name="xava_view"/>		</action>				<action name="delete" mode="detail"			class="org.openxava.actions.DeleteAction"			image="images/delete.gif"			keystroke="F4">			<use-object name="xava_view"/>		</action>				<action name="search" mode="detail"			by-default="if-possible"						class="org.openxava.actions.SearchAction"			image="images/find.gif"			keystroke="F8">											</action>				<action name="searchByViewKey" hidden="true"			by-default="if-possible"						class="org.openxava.actions.SearchByViewKeyAction">			<use-object name="xava_view"/>		</action>										<action name="deleteSelected" mode="list"			class="org.openxava.actions.DeleteSelectedAction"			keystroke="Control D">			<use-object name="xava_tab"/>		</action>										</controller>		<controller name="Print">										<action name="generatePdf" mode="list"			class="org.openxava.actions.GenerateReportAction"			image="images/pdf.gif"			keystroke="Control F">			<set property="type" value="pdf"/>			<use-object name="xava_tab"/>					</action>				<action name="generateExcel" mode="list"			class="org.openxava.actions.GenerateReportAction"			image="images/excel.gif"			keystroke="Control X">			<set property="type" value="csv"/>			<use-object name="xava_tab"/>					</action>							</controller>		<controller name="Mode">		<action name="detailAndFirst"			class="org.openxava.actions.GoDetailAction"			keystroke="Control D">			<set property="nextAction" value="Navigation.first"/>			<use-object name="xava_tab"/>		</action>		<action name="list"			class="org.openxava.actions.GoListAction"			keystroke="Control L">			<use-object name="xava_view"/>			<use-object name="xava_tab"/>
			<use-object name="xava_mainTab"/>
			<use-object name="xava_previousViews"/>		</action>		<action name="detail"			hidden="true"			class="org.openxava.actions.GoDetailAction"			keystroke="Control D">			<use-object name="xava_tab"/>		</action>	</controller>		<controller name="List">		
		<action name="init" on-init="true"
			class="org.openxava.actions.InitListAction"
			hidden="true">
			<use-object name="xava_tab"/>
			<use-object name="xava_mainTab"/>
		</action>									<action name="viewDetail"			class="org.openxava.actions.ViewDetailAction"			keystroke="Control D"			hidden="true"
			mode="list">			<set property="nextAction" value="Mode.detail"/>			<use-object name="xava_tab"/>			<use-object name="xava_view"/>			<use-object name="xava_row"/>
		</action>							<action name="goPreviousPage"			class="org.openxava.actions.GoPreviousPageAction"			keystroke="Control A"			hidden="true"
			mode="list"			image="images/previous_page.gif">			<use-object name="xava_tab"/>							</action>		<action name="goPage"			class="org.openxava.actions.GoPageAction"			keystroke="Control I"			hidden="true"
			mode="list">			<use-object name="xava_tab"/>				</action>																	<action name="goNextPage"			class="org.openxava.actions.GoNextPageAction"			keystroke="Control S"			hidden="true"
			mode="list"			image="images/next_page.gif">			<use-object name="xava_tab"/>				</action>													<action name="orderBy"			class="org.openxava.actions.OrderByAction"			hidden="true"
			mode="list">			<use-object name="xava_tab"/>				</action>				<!-- 
			Void action because the search is executed automatically
			on tab properties setup		-->													<action name="filter" by-default="almost-always"			class="org.openxava.actions.EmptyAction"			hidden="true"
			mode="list">		</action>																	<action name="deselectRows"			class="org.openxava.actions.DeselectRowsAction"			hidden="true"
			mode="list">						<use-object name="xava_tab"/>		</action>					
		<action name="customize"
			class="org.openxava.actions.CustomizeListAction"
			hidden="true"
			mode="list"
			image="images/customize.gif">		
			<use-object name="xava_tab"/>
		</action>		
		<action name="moveColumnToLeft"
			class="org.openxava.actions.MoveColumnToLeftAction"
			hidden="true"
			mode="list"
			image="images/move-left.gif">	
			<use-object name="xava_tab"/>					
		</action>				
		<action name="moveColumnToRight"
			class="org.openxava.actions.MoveColumnToRightAction"
			hidden="true"
			mode="list"
			image="images/move-right.gif">			
			<use-object name="xava_tab"/>			
		</action>						
		<action name="removeColumn"
			class="org.openxava.actions.RemoveColumnAction"
			hidden="true"
			mode="list"
			image="images/remove.gif">		
			<use-object name="xava_tab"/>
		</action>								
		<action name="addColumns"
			class="org.openxava.actions.NavigationAction"
			hidden="true"
			mode="list"
			image="images/add.gif">		
			<set property="nextController" value="AddColumns"/>
			<set property="customView" value="xava/addColumns"/>
		</action>											</controller>
	
	<controller name="AddColumns">
		<action name="sort" class="org.openxava.actions.SortColumnsAction" image="images/sort.gif">			
			<use-object name="xava_tab"/>
		</action>					
		<action name="addColumns" class="org.openxava.actions.AddColumnsAction">
			<use-object name="xava_tab"/>			
		</action>	
		<action name="restoreDefault" class="org.openxava.actions.RestoreDefaultColumnsAction">
			<use-object name="xava_tab"/>			
		</action>			
		<action name="cancel"
			class="org.openxava.actions.CancelInListAction">
		</action>		
	</controller>			<controller name="Navigation">						<action name="previous" mode="detail"			image="images/previous.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="Control A">			<set property="increment" value="-1"/>			<use-object name="xava_row"/>			<use-object name="xava_tab"/>			<use-object name="xava_view"/>		</action>									<action name="first" mode="detail"			image="images/home.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="Control P">			<set property="goFirst" value="true"/>			<use-object name="xava_row"/>			<use-object name="xava_tab"/>			<use-object name="xava_view"/>					</action>									<action name="next" mode="detail"			image="images/next.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="Control S">			<set property="increment" value="1"/>						<use-object name="xava_row"/>			<use-object name="xava_tab"/>			<use-object name="xava_view"/>		</action>										</controller>						<controller name="ConfirmDelete">					<action name="confirmDelete"			class="org.openxava.actions.ConfirmDeleteAction"			keystroke="F7">			<use-object name="xava_view"/>			<use-object name="xava_tab"/>			<use-object name="xava_row"/>					</action>			<action name="cancel"			class="org.openxava.actions.CancelAction"			keystroke="F3">
			<set property="restoreEditable" value="true"/>			<use-object name="xava_view"/>		</action>	</controller>			<controller name="Languages">		<action name="changeToValenciano" 			class="org.openxava.actions.ChangeLanguageAction">			<set property="idLanguage" value="ca"/>			<use-object name="xava_language"/>		</action>		<action name="changeToSpanish" 			class="org.openxava.actions.ChangeLanguageAction">			<set property="idLanguage" value="es"/>			<use-object name="xava_language"/>		</action>				</controller>		<controller name="ImageEditor">		<action name="changeImage"			class="org.openxava.actions.ChangeImageAction">						<use-object name="xava_newImageProperty"/>					</action>	</controller>		<controller name="LoadImage">		<action name="loadImage"			class="org.openxava.actions.LoadImageAction">						<use-object name="xava_view"/>			<use-object name="xava_newImageProperty"/>		</action>		</controller>		<controller name="Reference">		<action name="search"			class="org.openxava.actions.ReferenceSearchAction"			image="images/search.gif">						<use-object name="xava_view"/>			<use-object name="xava_referenceSubview"/>			<use-object name="xava_tab"/>			<use-object name="xava_currentReferenceLabel"/>		</action>					<action name="createNew"			class="org.openxava.actions.CreateNewFromReferenceAction">						<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/>					</action>							</controller>	
	<!--
		This controller is using when create a new entity from a reference.
		If you need to overwrite, you can create your own controller
		with the name {MyEntity}Creation. For example PersonCreation for create Person.
		-->	<controller name="NewCreation">
		<!-- The action 'new' is execute automatically -->
		<action name="new" hidden="true"
			class="org.openxava.actions.NewAction"
			keystroke="F2">
			<use-object name="xava_view"/>			
		</action>					<action name="saveNew"			class="org.openxava.actions.SaveNewAction">						<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/>		</action>					<action name="cancel"			class="org.openxava.actions.CancelAction">			
			<use-object name="xava_previousViews"/>
			<use-object name="xava_view"/>
		</action>				</controller>				<controller name="ReferenceSearch">		<action name="choose"			class="org.openxava.actions.ChooseReferenceAction">						<use-object name="xava_referenceSubview"/>
			<use-object name="xava_view"/>			<use-object name="xava_tab"/>					</action>					<action name="cancel"			class="org.openxava.actions.CancelReferenceSearchAction">			
			<use-object name="xava_view"/>
			<use-object name="xava_tab"/>		</action>						</controller>		<controller name="Collection">		<action name="new"			class="org.openxava.actions.CreateNewElementInCollectionAction">					</action>							<action name="hiddenDetail"			class="org.openxava.actions.HiddenDetailElementInCollectionAction">					</action>									<action name="save"			class="org.openxava.actions.SaveElementInCollectionAction">						<use-object name="xava_view"/>		</action>					<action name="remove"			class="org.openxava.actions.RemoveElementFromCollectionAction">						<use-object name="xava_view"/>		</action>							<action name="edit"			class="org.openxava.actions.EditElementInCollectionAction">						<use-object name="xava_view"/>		</action>									<action name="view"			class="org.openxava.actions.EditElementInCollectionAction">						<use-object name="xava_view"/>		</action>										</controller>			<controller name="Sections">		<action name="change"			class="org.openxava.actions.ChangeSectionAction">			<use-object name="xava_activeSection"/>		</action>			</controller>		<controller name="ListOnly">
		<action name="init"
			class="org.openxava.actions.GoListAction"
			hidden="true" on-init="true"/>
	</controller>							 
</controllers>