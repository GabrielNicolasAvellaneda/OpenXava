<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd"><!-- 
default-controllers.xml: OpenXava core controllers 

In your project use the name 'controllers.xml' or 'controladores.xml'

If you have to override some of this controller for you application, you only
need to create a controller in your application with the same name of the controller
here that you want to override.
-->

<controllers>

	<env-var name="XAVA_SEARCH_ACTION" value="CRUD.searchByViewKey"/>	<env-var name="XAVA_LIST_ACTION" value="List.viewDetail"/>		<object name="xava_view" class="org.openxava.view.View"/>		<object name="xava_referenceSubview" class="org.openxava.view.View"/>	
	<object name="xava_tab" class="org.openxava.tab.Tab"/>		
	<object name="xava_mainTab" class="org.openxava.tab.Tab"/>		
	<object name="xava_customizingTab" class="org.openxava.tab.Tab"/>	<object name="xava_row" class="java.lang.Integer" value="0"/>			<object name="xava_newImageProperty" class="java.lang.String"/>	<object name="xava_currentReferenceLabel" class="java.lang.String"/>
	<object name="xava_currentCollectionLabel" class="java.lang.String"/>
	<object name="xava_collectionViewObject" class="java.lang.String"/>		<object name="xava_previousControllers" class="java.util.Stack"/>
	<object name="xava_previousViews" class="java.util.Stack"/>
	<object name="xava_previousCustomViews" class="java.util.Stack"/>
	<object name="xava_gallery" class="org.openxava.session.Gallery"/>
	<object name="xava_defaultSchema" class="java.lang.String" scope="global"/>
	<object name="xava_currentModule" class="java.lang.String" />					<controller name="Typical">		<extends controller="Print"/>				<extends controller="CRUD"/>	</controller>				<controller name="Void"/>	
		<controller name="CRUD">							<action  name="new" 			class="org.openxava.actions.NewAction"			image="images/new.gif"			keystroke="Control N">
			<set property="restoreModel" value="true"/>			<use-object name="xava_view"/>					</action>									<action name="save" mode="detail"			class="org.openxava.actions.SaveAction"			image="images/save.gif"			keystroke="Control S">						<use-object name="xava_view"/>		</action>				<action name="delete" mode="detail" confirm="true"			class="org.openxava.actions.DeleteAction"			image="images/delete.gif"			keystroke="Control D">			<use-object name="xava_view"/>
			<use-object name="xava_row"/>								</action>				<action name="search" mode="detail"			by-default="if-possible"						class="org.openxava.actions.SearchAction"			image="images/find.gif"			keystroke="control B">											</action>				<action name="searchByViewKey" hidden="true"			by-default="if-possible"						class="org.openxava.actions.SearchByViewKeyAction">			<use-object name="xava_view"/>		</action>		
		
		<action name="searchExecutingOnChange" hidden="true"
			by-default="if-possible"			
			class="org.openxava.actions.SearchExecutingOnChangeAction">
			<use-object name="xava_view"/>
		</action>		
		
		<action name="searchReadOnly" hidden="true"
			by-default="if-possible"			
			class="org.openxava.actions.SearchReadOnlyAction">
			<use-object name="xava_view"/>
		</action>		
								<action name="deleteSelected" mode="list" confirm="true"			class="org.openxava.actions.DeleteSelectedAction"			keystroke="Control D">		</action>										</controller>		<controller name="Print">										<action name="generatePdf" mode="list"			class="org.openxava.actions.GenerateReportAction"			image="images/pdf.gif"			keystroke="Control Alt P">			<set property="type" value="pdf"/>		</action>

		<action name="generateExcel" mode="list"			class="org.openxava.actions.GenerateReportAction"			image="images/excel.gif"			keystroke="Control Alt X">			<set property="type" value="csv"/>			</action>
							</controller>		<controller name="Mode">		<action name="detailAndFirst"			class="org.openxava.actions.GoDetailAction"			keystroke="F8">			<set property="nextAction" value="Navigation.first"/>			<use-object name="xava_tab"/>		</action>		<action name="list"			class="org.openxava.actions.GoListAction"			keystroke="F9">			<use-object name="xava_view"/>			<use-object name="xava_tab"/>
			<use-object name="xava_mainTab"/>
			<use-object name="xava_previousViews"/>		</action>		<action name="detail"			hidden="true"			class="org.openxava.actions.GoDetailAction">			<use-object name="xava_tab"/>		</action>	</controller>		<controller name="List">		
	
		<action name="init" on-init="true"
			class="org.openxava.actions.InitListAction"
			hidden="true">
			<use-object name="xava_mainTab"/>
		</action>	
				<action name="viewDetail"			class="org.openxava.actions.ViewDetailAction"			keystroke="F7"			hidden="true"
			mode="list"
			image="images/edit.gif">			<set property="nextAction" value="Mode.detail"/>			<use-object name="xava_view"/>			<use-object name="xava_row"/>
		</action>	
				<action name="goPreviousPage"			class="org.openxava.actions.GoPreviousPageAction"			keystroke="Control A"			hidden="true"
			mode="list"			image="images/previous_page.gif">							</action>
				<action name="goPage"			class="org.openxava.actions.GoPageAction"			keystroke="Control I"			hidden="true"
			mode="list">			</action>	
				<action name="goNextPage"			class="org.openxava.actions.GoNextPageAction"			keystroke="Control S"			hidden="true"
			mode="list"			image="images/next_page.gif">			</action>
		
		<action name="goAddColumnsPreviousPage"
			class="org.openxava.actions.GoAddColumnsPageAction"
			keystroke="Control A"
			hidden="true"
			mode="list"
			image="images/previous_page.gif">
			<set property="increment" value="-1"/>
			<use-object name="xava_customizingTab" action-property="tab"/>					
		</action>
		
		<action name="goAddColumnsPage"
			class="org.openxava.actions.GoAddColumnsPageAction"
			keystroke="Control I"
			hidden="true"
			mode="list">				
			<use-object name="xava_customizingTab" action-property="tab"/>
		</action>	
		
		<action name="goAddColumnsNextPage"
			class="org.openxava.actions.GoAddColumnsPageAction"
			keystroke="Control S"
			hidden="true"
			mode="list"
			image="images/next_page.gif">	
			<set property="increment" value="1"/>
			<use-object name="xava_customizingTab" action-property="tab"/>
		</action>																								
		
		<action name="orderBy"
			class="org.openxava.actions.OrderByAction"
			hidden="true"
			mode="list">
		</action>		
							<action name="filter" by-default="almost-always"
			class="org.openxava.actions.FilterAction"
			hidden="true"
			mode="list"
			image="images/filter.gif">
		</action>															
				<action name="deselectRows"			class="org.openxava.actions.DeselectRowsAction"			hidden="true"
			mode="list">					</action>	
						
		<action name="customize"
			class="org.openxava.actions.CustomizeListAction"
			hidden="true"
			mode="list"
			image="images/customize.gif">		
		</action>		
		
		<action name="moveColumnToLeft"
			class="org.openxava.actions.MoveColumnToLeftAction"
			hidden="true"
			mode="list"
			image="images/move-left.gif">	
		</action>	
		
		<action name="moveColumnToRight"
			class="org.openxava.actions.MoveColumnToRightAction"
			hidden="true"
			mode="list"
			image="images/move-right.gif">			
		</action>	
		
		<action name="removeColumn"
			class="org.openxava.actions.RemoveColumnAction"
			hidden="true"
			mode="list"
			image="images/remove.gif">		
		</action>	
		
		<action name="addColumns"
			class="org.openxava.actions.GoAddColumnsAction"
			hidden="true"
			mode="list"
			image="images/add.gif">		
			<use-object name="xava_customizingTab"/> 
		</action>			

		<action name="hideRows"
			class="org.openxava.actions.HideRowsAction"
			hidden="true"
			mode="list">
		</action>
		
		<action name="showRows"
			class="org.openxava.actions.ShowRowsAction"
			hidden="true"
			mode="list">
		</action>		
				
	</controller>
	
	<controller name="AddColumns">
		<action name="sort" class="org.openxava.actions.SortColumnsAction" image="images/sort.gif">			
			<use-object name="xava_customizingTab" action-property="tab"/>
		</action>					
		<action name="addColumns" class="org.openxava.actions.AddColumnsAction">
			<use-object name="xava_customizingTab" action-property="tab"/>
		</action>	
		<action name="restoreDefault" class="org.openxava.actions.RestoreDefaultColumnsAction">
			<use-object name="xava_customizingTab" action-property="tab"/>			
		</action>			
		<action name="cancel"
			class="org.openxava.actions.CancelInListAction">
		</action>		
	</controller>			<controller name="Navigation">						<action name="previous" mode="detail"			image="images/previous.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="control alt LEFT">			<set property="increment" value="-1"/>			<use-object name="xava_row"/>			<use-object name="xava_view"/>		</action>									<action name="first" mode="detail"			image="images/home.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="control alt HOME">			<set property="goFirst" value="true"/>			<use-object name="xava_row"/>			<use-object name="xava_view"/>					</action>								<action name="next" mode="detail"			image="images/next.gif"			class="org.openxava.actions.ViewDetailAction"			keystroke="control alt RIGHT">			<set property="increment" value="1"/>						<use-object name="xava_row"/>			<use-object name="xava_view"/>		</action>										</controller>						<controller name="ImageEditor">
		<action name="changeImage"
			class="org.openxava.actions.ChangeImageAction">			
			<use-object name="xava_newImageProperty"/>			
		</action>
		<action name="deleteImage" confirm="true"
			class="org.openxava.actions.DeleteImageAction">			
			<use-object name="xava_newImageProperty"/>
			<use-object name="xava_view"/>			
		</action>
	</controller>
	
	<controller name="Return">
		<action name="return" image="images/back.gif"
			class="org.openxava.actions.CancelAction"/>
	</controller>
	
	
	<controller name="Gallery">
		<action name="edit" image="images/photo.gif" hidden="true"
			class="org.openxava.actions.EditGalleryAction">			
			<use-object name="xava_gallery"/>
			<use-object name="xava_view"/>
		</action>
		<action name="return" image="images/back.gif"
			class="org.openxava.actions.CancelAction"/>		
		<action name="addImage"
			class="org.openxava.actions.AddImageToGalleryAction"/>
		<action name="maximizeImage" hidden="true" image="images/maximize.gif"
			class="org.openxava.actions.MaximizeImageAction">
			<use-object name="xava_gallery"/>
		</action>
		<action name="minimizeImage" hidden="true" image="images/minimize.gif"
			class="org.openxava.actions.MinimizeImageAction">
			<use-object name="xava_gallery"/>
		</action>		
		<action name="removeImage" hidden="true" image="images/remove.gif"
			class="org.openxava.actions.RemoveImageFromGalleryAction">
			<use-object name="xava_gallery"/>
		</action>				
	</controller>
	
	<controller name="LoadImageIntoGallery">
		<action name="loadImage"
			class="org.openxava.actions.LoadImageIntoGalleryAction">			
			<use-object name="xava_gallery"/>
		</action>	
		
		<action name="cancel"
			class="org.openxava.actions.CancelAction">			
		</action>	
		
	</controller>
	
			<controller name="LoadImage">		<action name="loadImage"			class="org.openxava.actions.LoadImageAction">						<use-object name="xava_view"/>			<use-object name="xava_newImageProperty"/>		</action>		</controller>		<controller name="Reference">		<action name="search"			class="org.openxava.actions.ReferenceSearchAction"			image="images/search.gif">			<use-object name="xava_view"/>			<use-object name="xava_referenceSubview"/>			<use-object name="xava_tab"/>			<use-object name="xava_currentReferenceLabel"/>		</action>		<action name="createNew" 
			class="org.openxava.actions.CreateNewFromReferenceAction"
			image="images/create_new.gif">			<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/>
			<use-object name="xava_referenceSubview"/>		</action>
		<action name="modify" 
			class="org.openxava.actions.ModifyFromReferenceAction"
			image="images/edit.gif">
			<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/>
			<use-object name="xava_referenceSubview"/>
		</action>			</controller>	
	<!--
		This controller is using when create a new entity from a reference.
		If you need to overwrite, you can create your own controller
		with the name {MyEntity}Creation. For example PersonCreation for create Person.
		-->	<controller name="NewCreation">
		<!-- The action 'new' is execute automatically -->
		<action name="new" hidden="true"
			class="org.openxava.actions.NewAction"
			keystroke="F2">			
			<use-object name="xava_view"/>			
		</action>					<action name="saveNew" by-default="almost-always"			class="org.openxava.actions.SaveNewAction">						<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/> 				</action>					<action name="cancel"			class="org.openxava.actions.CancelAction">			
			<use-object name="xava_previousViews"/>
			<use-object name="xava_view"/>
		</action>				</controller>
	
	<!--
		This controller is using when modifying an entity from a reference.
		If you need to overwrite, you can create your own controller
		with the name {MyEntity}Modification. For example PersonModification for create Person.
		-->
	<controller name="Modification">
		<!-- The action 'search' is execute automatically -->
		<action name="search" hidden="true"
			class="org.openxava.actions.SearchByViewKeyAction"
			keystroke="F2">
			<use-object name="xava_view"/>			
		</action>			
		<action name="update" by-default="almost-always"
			class="org.openxava.actions.UpdateAction">			
			<use-object name="xava_view"/>
			<use-object name="xava_previousViews"/> 		
		</action>			
		<action name="cancel"
			class="org.openxava.actions.CancelAction">			
			<use-object name="xava_previousViews"/>
			<use-object name="xava_view"/>
		</action>			
	</controller>
					<controller name="ReferenceSearch">		<action name="choose"			class="org.openxava.actions.ChooseReferenceAction">			<use-object name="xava_referenceSubview"/>
			<use-object name="xava_view"/>			<use-object name="xava_tab"/>					</action>		<action name="cancel"			class="org.openxava.actions.CancelFromCustomListAction">
			<use-object name="xava_view"/>
			<use-object name="xava_tab"/>		</action>	</controller>
	
	<controller name="AddToCollection">
		<action name="add" 
			class="org.openxava.actions.AddElementsToCollectionAction">
			<use-object name="xava_view"/>			
			<use-object name="xava_tab"/>			
			<use-object name="xava_collectionViewObject" action-property="viewObject"/>
			<use-object name="xava_currentCollectionLabel"/>			
		</action>
		<action name="cancel" 
			class="org.openxava.actions.CancelFromCustomListAction">
			<use-object name="xava_view"/>
			<use-object name="xava_tab"/>
		</action>
	</controller>
			<controller name="Collection">		<action name="new" image="images/create_new.gif"			class="org.openxava.actions.CreateNewElementInCollectionAction">					</action>				
		
		<action name="add" image="images/create_new.gif"
			class="org.openxava.actions.GoAddElementsToCollectionAction">			
			<use-object name="xava_tab"/>
			<use-object name="xava_currentCollectionLabel"/>
			<use-object name="xava_collectionViewObject"/>
		</action>						
		<action name="hideDetail"			class="org.openxava.actions.HideDetailElementInCollectionAction">					</action>							
		<action name="save"			class="org.openxava.actions.SaveElementInCollectionAction">						<use-object name="xava_view"/>		</action>					<action name="remove"			class="org.openxava.actions.RemoveElementFromCollectionAction">						<use-object name="xava_view"/>		</action>							<action name="edit" image="images/edit.gif"			class="org.openxava.actions.EditElementInCollectionAction">						<use-object name="xava_view"/>		</action>									<action name="view" image="images/view.gif"			class="org.openxava.actions.EditElementInCollectionAction">						<use-object name="xava_view"/>		</action>
		 
		<action name="removeSelected" confirm="true" image="images/delete.gif"
			class="org.openxava.actions.RemoveSelectedInCollectionAction">
			<use-object name="xava_view"/>
		</action>
											</controller>
	
	<controller name="DefaultListActionsForCollections">
		<extends controller="Print"/>
	</controller>		<controller name="Sections">		<action name="change" 			class="org.openxava.actions.ChangeSectionAction"
			keystroke="Control 1..9"/>
	</controller>		<controller name="ListOnly">
		<action name="init"
			class="org.openxava.actions.GoListAction"
			hidden="true" on-init="true"/>
	</controller>
	
	<!-- 
	If you want that your module use the default schema in the object
	'xava_defaultSchema' you module has to use this controller,
	or you controller has to extend from this one.
	-->
	<controller name="DefaultSchema">
		<action name="setSchemaDefaultSchema" before-each-request="true" hidden="true"
			class="org.openxava.actions.SetDefaultSchemaAction">
			<use-object name="xava_defaultSchema"/>			
		</action>
	</controller>								 
</controllers>