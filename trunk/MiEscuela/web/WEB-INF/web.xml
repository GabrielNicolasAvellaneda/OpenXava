<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>xavax application</display-name>
	<servlet>
		<servlet-name>images</servlet-name>
		<servlet-class>org.xavax.web.servlets.ImagesServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>jasperReport</servlet-name>
		<servlet-class>org.xavax.web.servlets.JasperReportServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>generateReport</servlet-name>
		<servlet-class>org.xavax.web.servlets.GenerateReportServlet</servlet-class>
	</servlet>		
	<servlet-mapping>
		<servlet-name>images</servlet-name>
		<url-pattern>/xavax/ximage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>images</servlet-name>
		<url-pattern>/ximage</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>jasperReport</servlet-name>
		<url-pattern>/xavax/jasperReport</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>generateReport</servlet-name>
		<url-pattern>/xavax/list.pdf</url-pattern>
	</servlet-mapping>		
	<servlet-mapping>
		<servlet-name>generateReport</servlet-name>
		<url-pattern>/xavax/list.csv</url-pattern>
	</servlet-mapping>			
  <mime-mapping>
        <extension>
            jnlp
        </extension>
        <mime-type>
            application/x-java-jnlp-file
        </mime-type>
    </mime-mapping>	
</web-app>
